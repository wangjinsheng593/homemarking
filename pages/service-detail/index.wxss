@import "./index.skeleton.wxss";
.container {
    font-size: 28rpx;
    box-sizing: border-box;
    background-color: #efefef;
    width: 100%;
}

.service-container{
    padding-bottom: 300rpx;
}

.service-info {
    width: 100%;
    background-color: #fff;
    padding-bottom: 30rpx;
}

.cover-image image {
    width: 100%;
}

.row {
    display: flex;
    align-items: center;
    margin-top: 30rpx;
    padding: 0rpx 30rpx;
}

.title {
    font-size: 32rpx;
    font-weight: bold;
}

.category {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}

.tag-text {
    margin-left: 10rpx;
}

.score {
    margin-left: 30rpx;
    color: #f27013;
}

.price {
    font-size: 32rpx;
    color: red;
}

.label {
    font-size: 24rpx;
}

.row-space-between {
    justify-content: space-between;
}


.service-status, .service-rating {
    margin-top: 30rpx;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 30rpx;
    background-color: #fff;
}

.service-rating{
    min-height: 500rpx;
}

.service-status {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.service-rating-title {
    padding-bottom: 20rpx;
    border-bottom: 1px solid #efefef;
}

.service-rating-list {
    margin-top: 30rpx;
}
.service-rating-item{
    margin-bottom: 30rpx;
    padding-bottom: 30rpx;
    border-bottom: 1px solid #efefef;

}
.inner-container{
    padding-bottom: 250rpx;
}

.action-bar {
    box-sizing: border-box;
    border-top: 1px solid #efefef;
    background-color: #fff;
    padding: 30rpx 30rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    z-index: 2;
}


.service-status{
    background-color: #fff;
    width: 100%;
    padding: 30rpx 30rpx;
    box-sizing: border-box;
    margin-top: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
