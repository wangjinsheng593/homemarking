<view class="container">
    <view class="service">
        <view class="left">
            <image class="cover-image" src="{{_service.cover_image.path}}"></image>
        </view>
        <view class="right">
            <view class="title">{{_service.title}}</view>
            <view class="price">
                <text class="label">¥<text>{{_service.price}}</text></text>
            </view>
        </view>
    </view>
    <view class="action-bar">
        <i-button wx:if="{{flow===flowEnum.OUT}}" bind:tap="handleSendLink" size='mini' shape='circle'>
            发送链接
        </i-button>
        <i-button wx:else bind:tap="handleSelect" size='mini' shape='circle'>查看链接</i-button>
    </view>
</view>