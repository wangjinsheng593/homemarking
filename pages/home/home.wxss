/* pages/home/home.wxss */
.container {
    display: flex;
    flex-direction: column;
    height: 100%;

}

.tabs {
    display: flex;
    padding: 30rpx 0;
    background-color: #fff;
    align-items: center;
    height: 126rpx;
    box-sizing: border-box;

}

.tab-item {
    /* 自动均分元素的空间 */
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.tab-label {
    color: #888888;
    /* 换行 */
    white-space: nowrap;
}

.active-tab {
    color: #333333;
    font-weight: bold;
}

.divider {
    margin-top: 10rpx;
    height: 6rpx;
    width: 50rpx;
    background-color: #f3d006;
}

.category{
    padding: 30rpx 0 30rpx 30rpx;

}
.category-swiper-item{
    border-radius: 20rpx;
    width: 300rpx;
    height: 150rpx;
    background-image:linear-gradient(to right,#e68d44,#eb6d59) ;
}
.category-name{
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    color: #fff;
}