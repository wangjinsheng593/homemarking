<!--pages/home/home.wxml-->
<view class="container">
    <view class="tabs">
        <view class="tab-item" wx:for="{{tabs}}" wx:key='index' data-index="{{index}}" bindtap="handleTabChange">
            <view class="tab-label {{currentTabIndex===index?'active-tab':''}}">{{item}}</view>
            <view class="divider" wx:if="{{currentTabIndex===index?'active-tab':''}}"></view>
        </view>

    </view>
    <view class="category">
        <!-- 让下一个元素漏一小半出来，next-margin -->
        <swiper style="height: 150rpx;" display-multiple-items="{{2}}" next-margin="60rpx">
            <swiper-item wx:for="{{categoryList}}" wx:key="index" data-id="{{item.id}}" bindtap="handleCategory">
                <view class="category-swiper-item">
                    <text class="category-name">{{item.name}}</text>
                </view>
            </swiper-item>
        </swiper>
    </view>
    <view class="tabs-panel"></view>
</view>