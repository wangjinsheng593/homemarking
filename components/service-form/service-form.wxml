
<mp-form>
    <mp-cell title='发布类型'>
        <picker range="{{typeList}}" range-key="name" bindchange='handleTypeChange'>
            <view wx:if="{{typePickerIndex!=null}}">{{typeList[typePickerIndex].name}}</view>
            <view wx:else class="picker-placeholder">请选择发布类型</view>
        </picker>
    </mp-cell>

    <mp-cell title="标题">
        <input value="{{formDate.title}}" placeholder="内容长度不少于五个字" bindinput="handleInput" data-field="title"></input>
    </mp-cell>

    <mp-cell title="所属分类">
        <picker range="{{categoryList}}" range-key="name" bindchange="handleCategoryChange">
            <view wx:if="{{categoryPickerIndex !==null}}">
                {{categoryList[categoryPickerIndex].name}}
            </view>
            <view wx:else class="">请选择分类</view>
        </picker>
    </mp-cell>

    <mp-cell title="封面图"></mp-cell>

    <mp-cell title="服务描述">
        <textarea class="desc-textarea" bindinput="handleInput" data-field="description" value="{{formDate.description}}" placeholder="必填，内容长度不少于 20 个字" name="" id="" cols="30" rows="10"></textarea>
    </mp-cell>

    <mp-cell title="提供地点">
        <switch checked="{{formData.designated_place}}" bindchange="handleSwitchChange"></switch>
    </mp-cell>

    <mp-cell title="开始日期">
        <picker mode="date" value="{{formData.begin_date}}" bindchange="handleBeginDateChange">
            <view wx:if="{{formData.begin_date !==null}}">{{formData.begin_date}}</view>
            <view wx:else class="picker-placeholder">服务内容有效期开始日期</view>
        </picker>
    </mp-cell>
    
    <mp-cell title="结束日期">
        <picker mode="date" value="{{formData.end_date}}" bindchange="handleEndDateChange">
            <view wx:if="{{formData.end_date !==null}}">{{formData.end_date}}</view>
            <view wx:else class="picker-placeholder">服务内容有效期结束日期</view>
        </picker>
    </mp-cell>

    <mp-cell title="价格">
        <input value="{{formData.price}}" bindinput="handleInput" data-field="price" placeholder="服务价格，不少于1"></input>
    </mp-cell>
    <view class="form-floor">
        <i-button size='long' shape="circle" bing:tap="handleSubmit"></i-button>
    </view>
   
</mp-form>